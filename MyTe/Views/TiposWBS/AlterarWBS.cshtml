@model MyTe.Models.Entities.WBS

@{
    ViewData["Title"] = "AlterarWBS";
}

<h1>Alteração na descrição da WBS</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AlterarWBS">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CodigoWBS" class="control-label"></label>
                <input asp-for="CodigoWBS" class="form-control" />
                <span asp-validation-for="CodigoWBS" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Alterar WBS" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarWBSs">Voltar para a lista de WBS</a>
</div>


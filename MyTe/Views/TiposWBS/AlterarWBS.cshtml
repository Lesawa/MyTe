@model MyTe.Models.Entities.WBS

@{
    ViewData["Title"] = "AlterarWBS";
}


<div class="row center-div">
    <div class="col-md-4 card">
        <h1 class="text-center">Alteração WBS</h1>
        <br>
        <form asp-action="AlterarWBS">
            <!-- Se a ação de incluir for bem-sucedida, exibir a mensagem -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="mensagem" class="alert alert-success">@TempData["SuccessMessage"]</div>
                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        setTimeout(function () {
                            document.getElementById('mensagem').style.display = 'none';
                            window.location.href = '@Url.Action("ListarWBSs", "TiposWBS")';

                        }, 3000);
                    });
                </script>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CodigoWBS" class="control-label"></label>
                <input asp-for="CodigoWBS" class="form-control" />
                <span asp-validation-for="CodigoWBS" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tipo" class="control-label"></label>

                <select asp-for="Tipo" class="form-select">
                    <option value="0">SELECIONE O TIPO</option>
                    <option value="1">1 - ALOCADO</option>
                    <option value="2">2 - NÃO ALOCADO</option>
                </select>

                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Alterar WBS" class="btn btn-success" />
            </div>
            <div class="text-center mt-3">
                <a asp-action="ListarWBSs">Voltar para a lista de WBS</a>
            </div>
        </form>
    </div>
</div>



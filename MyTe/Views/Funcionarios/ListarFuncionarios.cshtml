@model IEnumerable<MyTe.Models.Entities.Funcionario>

@{
    ViewData["Title"] = "ListarFuncionarios";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <!-- Título -->
        <h1 class="mb-4" style="font-weight: bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); color: #890078;">Lista de Funcionários</h1>


        <!-- Botão -->
        <p class="text-left">
            <a asp-action="IncluirFuncionario" class="btn btn-outline-dark  align-items-center">
                <i class="bi bi-person-plus-fill" style="font-size: 1rem;"></i>
                <span class="ml-1" style="font-size: 0.9rem;">Funcionário</span>
            </a>


        </p>

        <table class="tabelas">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <center>
                                <a asp-action="RemoverFuncionario" asp-route-id="@item.Id"><i class="bi bi-trash3-fill custom-icon"></i></a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

@model MyTe.Models.Entities.Funcionario

@{
    ViewData["Title"] = "IncluirFuncionario";
}



<div class="container center-div">
    <div class="row justify-content-center">
        <div class="col-md-4 card">
            <h1 style="text-align: center; font-weight: bold;">Novo Funcionário</h1>

                <br>
                <form asp-action="IncluirFuncionario">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <input type="submit" value="Incluir" class="btn btn-success" />
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="ListarFuncionarios">Voltar para a lista de funcionários</a>
                </div>
        </div>
    </div>
</div>



@model IEnumerable<MyTe.Models.Entities.LancamentoDeHora>
 
@{

    ViewData["Title"] = "Lançar Horas";

}
<!DOCTYPE html>
<html>
 <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <center>
    <h1 class="mb-4">Lançar Horas</h1>
    </center>
</head>
<div class="container">
    <form asp-action="AdicionarHora">
        <div class="tabelas">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Selecione a WBS</th>
                        @for (int i = 1; i <= 15; i++)
                        {
                            <th>@DateTime.Now.AddDays(i-1).ToString("ddd")<br />@i</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int row = 0; row < 3; row++)
                    {
                        <tr>
                            <td>
                                <div class="col col-lg">
                                    <select class="form-select">
                                        <option value="0">Selecione</option>
                                        @foreach (var wbs in (SelectList)ViewBag.ListaDeWBS)
                                        {
                                            <option value="@wbs.Value">@wbs.Text</option>
                                        }
                                    </select>
                                </div>
                            </td>
                            @for (int col = 1; col <= 15; col++)
                            {
                                <td class="col col-lg">
                                    <input type="text" class="form-control" />
                                </td>
                            }
                        </tr>
                    }
                    <td>
                    
                    </td>
                </tbody>
            </table>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Incluir horas</button>
            
        </div>
   </form>
</div>
</html>
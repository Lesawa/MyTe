@model MyTe.Models.Entities.LancamentoDeHora

@{
    ViewData["Title"] = "AdicionarHora";
}

<h1 class="text-center mb-4">Adicionar Hora</h1>
<body>

<div class="container center-div">
    <div class="row justify-content-center">
        <div class="col-md-4 card">
            <form asp-action="AdicionarHora">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="FuncionarioId" class="control-label"></label>
                    <input asp-for="FuncionarioId" class="form-control" />
                    <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="WBSId" class="control-label"></label>

                    <select asp-for="WBSId" asp-items="(SelectList)ViewBag.ListaDeWBS" class="form-select">
                        <option value="0">SELECIONE A WBS</option>
                    </select>

                    <span asp-validation-for="WBSId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="RegistroData" class="control-label"></label>
                    <input asp-for="RegistroData" class="form-control" type="date" />
                    <span asp-validation-for="RegistroData" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HorasTrabalhadas" class="control-label"></label>
                    <input asp-for="HorasTrabalhadas" class="form-control" />
                    <span asp-validation-for="HorasTrabalhadas" class="text-danger"></span>
                </div>
                <div class="mt-3">
                        <input type="submit" value="Incluir Hora" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class ="text-center mt-3">
     <a class="nav-link text-primary" asp-action="ListarHoras">Voltar para o menu anterior</a>
</div>
</body>

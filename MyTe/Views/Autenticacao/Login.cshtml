@model MyTe.Models.Entities.LogonViewModel

@{
    ViewData["Title"] = "Login";
}




<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="cor">
    <div class ="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg p-3 mb-5 bg-white text-black">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-2">

                            <h1 class="fw-bold mb-4 text-uppercase">Login</h1>
@*                             Exibir mensagem de sucesso se estiver presente 
 *@                            
                            <form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">                                
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control form-control-lg"/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label asp-for="Senha" class="form-label"></label>
                                    <input asp-for="Senha" class="form-control form-control-lg" />
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Efetuar Login" class="btn btn-success" />
                                </div>
                            </form>                    
                             
                        </div>
                    </div>
                </div>      
            </div>
        </div>
    </div>
</body>